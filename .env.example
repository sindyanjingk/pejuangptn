# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/tryout_platform"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS=12

# Email Configuration (using Gmail as example)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="no-reply@tryoutplatform.com"
FROM_NAME="Tryout Platform"

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_IMAGE_TYPES="jpg,jpeg,png,gif,webp"
ALLOWED_VIDEO_TYPES="mp4,webm,mov"
ALLOWED_AUDIO_TYPES="mp3,wav,ogg"

# Payment Gateway (example with Midtrans)
MIDTRANS_SERVER_KEY="your-midtrans-server-key"
MIDTRANS_CLIENT_KEY="your-midtrans-client-key"
MIDTRANS_IS_PRODUCTION=false
PAYMENT_CALLBACK_URL="http://localhost:3000/api/payments/callback"

# Cloud Storage (example with AWS S3)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="ap-southeast-1"
AWS_S3_BUCKET="tryout-platform-assets"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Application Configuration
APP_NAME="Tryout Platform"
APP_URL="http://localhost:3000"
APP_ENV="development"
APP_DEBUG=true

# Security
CORS_ORIGIN="http://localhost:3000"
RATE_LIMIT_WINDOW=900000 # 15 minutes
RATE_LIMIT_MAX=100 # requests per window

# Analytics
GOOGLE_ANALYTICS_ID=""
MIXPANEL_TOKEN=""

# Notification Services
FIREBASE_SERVER_KEY="" # for push notifications
TELEGRAM_BOT_TOKEN=""
TELEGRAM_CHAT_ID=""

# AI/ML Services (optional for advanced features)
OPENAI_API_KEY=""
HUGGINGFACE_API_KEY=""

# Monitoring
NEW_RELIC_LICENSE_KEY=""
SENTRY_DSN=""